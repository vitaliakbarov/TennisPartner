<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#b2d347" >
<!--
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Design Top Rated Screen"
        android:textSize="20dp"
        android:layout_centerInParent="true"/>
-->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/my_icon"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="40dp"
                    android:layout_height="30dp"

                    android:background="@drawable/israel"
                    android:id="@+id/hebrew_by_name_fragment"/>

                <Button
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/english"
                    android:id="@+id/english_by_name_fragment"/>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:id="@+id/logout_fragment_by_name"
                android:textColor="#fd0303"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:id="@+id/text_view_email_fragment_by_name"
                android:textColor="@color/textColor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/search_by_name"
                android:textSize="32sp"
                android:textColor="@color/textColor"
                android:layout_marginTop="20dp"
                />

            <EditText
            android:layout_width="200sp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_corner"
            android:layout_gravity="center_horizontal"

            android:hint="@string/first_name"
                android:singleLine="true"
                android:id="@+id/first_name_fragment_by_name"/>


            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="@string/search"
                android:layout_marginTop="20dp"
                android:background="@drawable/button"
                android:id="@+id/search_button_fragment_by_name"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:src="@drawable/swipe"
                android:id="@+id/swipe_image_view"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>